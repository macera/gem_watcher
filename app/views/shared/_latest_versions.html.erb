<div class="six wide column">

  <div class="ui segment">
    <h2><i class="rss square icon"></i>VERSION HISTORY</h2>
    <div class="ui relaxed list">
      <% release_feeds.each do |entry| %>
        <div class="item">
          <i class="diamond red icon"></i>
          <div class="content">
            <span class="header">
              <%= link_to(entry.version,
                          plugin_version_path(plugin_id: plugin.id, id: entry.id)
                         )
              %>
            </span>
            <div class="description"><%= l entry.published %></div>
          </div>
        </div>
      <% end %>
      <div style='text-align:right'>moreボタンをここに追加</div>
    </div>
  </div>


  <div class="ui segment">
    <h2><i class="folder open icon"></i>使用中のプロジェクト</h2>
    <div class="ui relaxed list">
      <% plugin.project_versions.each do |version| %>
        <div class="item">
          <i class="large folder outline middle aligned icon"></i>
          <div class="content">
            <span class="header">
              <%= link_to version.project.name, project_path(version.project.id) %>
              <span style="<%= 'color:red;' if version.newest %>"><%= version.installed %></span>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="ui segment">
    <%= link_to plugin.homepage_uri || "#{Settings.feeds.rubygem}#{plugin.name}", class: "ui blue button", target: '_blank' do %>
        公式ホームページ <i class="chevron right icon"></i>
      <% end %>
  </div>

</div>